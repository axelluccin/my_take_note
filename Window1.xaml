<Window x:Class="TestWPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title="Application de Prise de Note" Height="300" Width="525">
    <Grid>
        <ListView x:Name="ListNote" HorizontalAlignment="Left" Height="100" Margin="24,101,0,0" VerticalAlignment="Top" Width="462">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titre" Width="80" DisplayMemberBinding="{Binding Titre}"></GridViewColumn>
                    <GridViewColumn Header="Dernière Modification" Width="130" DisplayMemberBinding="{Binding Modification}"></GridViewColumn>
                    <GridViewColumn Header="Contenu" Width="250" DisplayMemberBinding="{Binding Text}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button  Content="Se Déconnecter" HorizontalAlignment="Left" Margin="336,29,0,0" VerticalAlignment="Top" Width="150"/>
        <Button  Content="Créer un Note" HorizontalAlignment="Left" Margin="24,29,0,0" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>
