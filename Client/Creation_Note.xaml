<Window x:Class="Client.Creation_Note"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Creation_Note" Height="350" Width="525">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="50,28,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="125" Text="{Binding Titre}"/>
        <TextBox HorizontalAlignment="Left" Height="170" Margin="50,81,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="394" Text="{Binding Texte}"/>
        <Button Command="{Binding Validation}" Content="Valider" HorizontalAlignment="Left" Margin="364,277,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,12,0,0" TextWrapping="Wrap" Text="Titre" VerticalAlignment="Top" Width="125" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,65,0,0" TextWrapping="Wrap" Text="Texte" VerticalAlignment="Top" Width="125" TextAlignment="Center"/>

    </Grid>
</Window>
